                        android:id="@+id/ven_det_tv_pincode"
                        android:fontFamily="@font/montser_regular"
                        android:textSize="18sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="5dp"
                        android:id="@+id/ven_det_btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="EDIT"
                        android:background="@drawable/button_bg"
                        android:textStyle="bold"
                        android:fontFamily="@font/montser_bold"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/edit_layout"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:textColor="#000"
                        android:paddingRight="15dip"
                        android:text="COMPANY NAME :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.libizo.CustomEditText
                        android:textColorHint="#FFFFFF"
                        app:libIZO_setFont="@string/m_regular"
                        app:libIZO_setBackgroundColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:id="@+id/ven_det_et_cname"
                        app:libIZO_clearIconTint="#808080"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setBorderColor="#10000000"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:textColor="#000"
                        android:paddingRight="15dip"
                        android:text="VENDOR NAME :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.libizo.CustomEditText
                        android:textColorHint="#FFFFFF"
                        app:libIZO_setFont="@string/m_regular"
                        app:libIZO_setBackgroundColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:id="@+id/ven_det_et_name"
                        app:libIZO_clearIconTint="#808080"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setBorderColor="#10000000"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:textColor="#000"
