<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PurchaseActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/nonedit_layout"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="INVOICE NO :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.libizo.CustomEditText
                        android:textColorHint="#FFFFFF"
                        app:libIZO_setFont="@string/m_regular"
                        app:libIZO_setBackgroundColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:id="@+id/pur_et_invoice"
                        app:libIZO_clearIconTint="#808080"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setBorderColor="#50000000"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="DATE :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:background="@drawable/layout_bg"
                            android:layout_margin="5dp"
                            android:id="@+id/pur_tv_date"
                            android:textSize="16sp"
                            android:fontFamily="@font/montser_regular"
                            android:gravity="center"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                        <ImageView
                            android:id="@+id/pur_iv_date"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_calender"
                            android:layout_gravity="center"
                            android:layout_weight="1.7"
                            android:layout_width="match_parent"
                            android:layout_height="25dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="COMPANY NAME :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/layout_bg"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/pur_spin_vendor"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/pur_iv_info"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_info"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pur_iv_add"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_add"/>
                    <TextView
                        android:textColor="#000"
                        android:layout_margin="5dp"
                        android:text="Add Products"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/montser_bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="5dp"
                        android:background="@drawable/layout_bg"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:gravity="center"
                            android:fontFamily="@font/montser_bold"
                            android:textSize="16sp"
                            android:text="Product"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#000"
                            android:gravity="center"
                            android:fontFamily="@font/montser_bold"
                            android:textSize="16sp"
                            android:text="Size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#000"
                            android:gravity="center"
                            android:fontFamily="@font/montser_bold"
                            android:textSize="16sp"
                            android:text="Qty/Tons/Lt"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/pur_tv_noproduct"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:fontFamily="@font/montser_regular"
                        android:textSize="16sp"
                        android:text="No Products Added"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_pur"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:layout_margin="5dp"
                            android:text="Subtotal :"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/montser_bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/pur_tv_subtotal"
                            android:textColor="#5c5c5c"
                            android:layout_margin="5dp"
                            android:text=""
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/montser_regular"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:layout_margin="5dp"
                            android:text="GST (18%) :"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/montser_bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/pur_tv_gst"
                            android:textColor="#5c5c5c"
                            android:layout_margin="5dp"
                            android:text=""
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/montser_regular"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000"
                            android:layout_margin="5dp"
                            android:text="Grand Total :"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/montser_bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/pur_tv_grandtotal"
                            android:textColor="#5c5c5c"
                            android:layout_margin="5dp"
                            android:text=""
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/montser_regular"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="5dp"
                        android:id="@+id/pur_btn_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ADD"
                        android:background="@drawable/button_bg"
                        android:textStyle="bold"
                        android:fontFamily="@font/montser_bold"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>