<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SalaryActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="visible"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="DATE :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:background="@drawable/layout_bg"
                            android:layout_margin="5dp"
                            android:id="@+id/sal_tv_date"
                            android:textSize="16sp"
                            android:fontFamily="@font/montser_regular"
                            android:gravity="center"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                        <ImageView
                            android:id="@+id/sal_iv_date"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_calender"
                            android:layout_gravity="center"
                            android:layout_weight="1.7"
                            android:layout_width="match_parent"
                            android:layout_height="25dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="Veener :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Sq.Ft"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:id="@+id/sal_et_veener_ft"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Price"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:id="@+id/sal_et_veener_price"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="Dyer :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Sq.Ft"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:id="@+id/sal_et_dyrer_ft"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Price"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:id="@+id/sal_et_dyrer_price"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="Pressing :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Sq.Ft"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:id="@+id/sal_et_press_ft"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Price"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:id="@+id/sal_et_press_price"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000"
                        android:fontFamily="@font/montser_bold"
                        android:textSize="16sp"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:text="Finishing :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:id="@+id/sale_spin_ft"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                        <com.libizo.CustomEditText
                            android:layout_weight="1"
                            android:textColorHint="#5c5c5c"
                            app:libIZO_setFont="@string/m_regular"
                            app:libIZO_setBackgroundColor="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Price"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:id="@+id/sal_et_finish_price"
                            app:libIZO_clearIconTint="#808080"
                            app:libIZO_setBorderView="true"
                            app:libIZO_setBorderColor="#50000000"
                            app:libIZO_setClearIconVisible="true"
                            app:libIZO_setCornerRadius="4dp"
                            app:libIZO_setStrokeWidth="2dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="5dp"
                        android:id="@+id/sal_btn_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ADD"
                        android:background="@drawable/button_bg"
                        android:textStyle="bold"
                        android:fontFamily="@font/montser_bold"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>